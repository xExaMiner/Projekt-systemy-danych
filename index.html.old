<!DOCTYPE html>
<html lang="pl" class="h-full bg-gray-50">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Stacja Pogody</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'system-ui', 'sans-serif'],
          }
        }
      }
    }
  </script>
  <link href="https://rsms.me/inter/inter.css" rel="stylesheet">
</head>
<body class="min-h-screen flex items-center justify-center p-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-6 space-y-6">
    <h1 class="text-2xl font-bold text-center text-gray-800">Stacja Pogody</h1>

    <!-- Input + Button -->
    <div class="flex gap-2">
      <input
        id="locationInput"
        type="text"
        placeholder="Wpisz miasto..."
        value="Bydgoszcz"
        class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        id="fetchBtn"
        class="px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition"
      >
        Sprawd≈∫
      </button>
    </div>

    <!-- Weather Card -->
    <div id="weatherCard" class="hidden space-y-4 p-5 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-xl">
      <div class="text-center">
        <div id="icon" class="text-6xl">‚òÄ</div>
        <h2 id="city" class="text-xl font-semibold text-gray-800 mt-2"></h2>
        <p id="time" class="text-sm text-gray-600"></p>
      </div>

      <div class="grid grid-cols-2 gap-3 text-sm">
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Temperatura</div>
          <div id="temp" class="font-bold text-lg"></div>
        </div>
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Wilgotno≈õƒá</div>
          <div id="humidity" class="font-bold text-lg"></div>
        </div>
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Wiatr</div>
          <div id="wind" class="font-bold text-lg"></div>
        </div>
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Ci≈õnienie</div>
          <div id="pressure" class="font-bold text-lg"></div>
        </div>
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Zachmurzenie</div>
          <div id="clouds" class="font-bold text-lg"></div>
        </div>
        <div class="bg-white/70 rounded-lg p-3">
          <div class="text-gray-600">Kierunek wiatru</div>
          <div id="windDir" class="font-bold text-lg"></div>
        </div>
      </div>
    </div>

    <!-- Error Message -->
    <div id="errorMsg" class="hidden text-red-600 text-center font-medium"></div>
  </div>

  <script>
    const API_KEY = "dbd2e2c6b8c5dd904dbf282002c96a7d"; // ZMIE≈É NA SW√ìJ KLUCZ!
    const DEFAULT_CITY = "Bydgoszcz";

    const elements = {
      input: document.getElementById("locationInput"),
      btn: document.getElementById("fetchBtn"),
      card: document.getElementById("weatherCard"),
      error: document.getElementById("errorMsg"),
      city: document.getElementById("city"),
      temp: document.getElementById("temp"),
      humidity: document.getElementById("humidity"),
      wind: document.getElementById("wind"),
      windDir: document.getElementById("windDir"),
      pressure: document.getElementById("pressure"),
      clouds: document.getElementById("clouds"),
      time: document.getElementById("time"),
      icon: document.getElementById("icon")
    };

    // Ikony pogodowe
    const icons = {
      clear: "‚òÄ",
      partly: "‚õÖ",
      cloudy: "‚òÅ",
      rain: "üåß",
      storm: "‚õà"
    };

    function getWindDirection(deg) {
      if (deg === undefined) return "N/A";
      const directions = ["N", "NE", "E", "SE", "S", "SW", "W", "NW"];
      const index = Math.round(deg / 45) % 8;
      return `${deg}¬∞ (${directions[index]})`;
    }

    function showError(msg) {
      elements.error.textContent = msg;
      elements.error.classList.remove("hidden");
      elements.card.classList.add("hidden");
    }

    function hideError() {
      elements.error.classList.add("hidden");
    }

    async function fetchWeather() {
      const location = elements.input.value.trim() || DEFAULT_CITY;
      if (!location) return showError("Wpisz nazwƒô miasta.");

      hideError();
      elements.btn.disabled = true;
      elements.btn.textContent = "≈Åadowanie...";

      try {
        const res = await fetch(
          `https://api.openweathermap.org/data/2.5/weather?q=${location}&appid=${API_KEY}&lang=pl`
        );

        if (!res.ok) {
          const err = await res.json();
          if (err.cod === "404") {
            throw new Error(`Miasto "${location}" nie znalezione.`);
          }
          throw new Error(`B≈ÇƒÖd HTTP: ${res.status}`);
        }

        const data = await res.json();

        // Czas lokalny
        const utcNow = new Date();
        const localTime = new Date(utcNow.getTime() + data.timezone * 1000);
        const timeStr = localTime.toLocaleString("pl-PL");

        // Dane
        const tempC = Math.round(data.main.temp - 273.15);
        const icon = data.clouds.all < 20 ? icons.clear :
                     data.clouds.all < 80 ? icons.partly : icons.cloudy;

        // Aktualizacja UI
        elements.city.textContent = data.name;
        elements.temp.textContent = `${tempC}¬∞C`;
        elements.humidity.textContent = `${data.main.humidity}%`;
        elements.wind.textContent = `${data.wind.speed} m/s`;
        elements.windDir.textContent = getWindDirection(data.wind.deg);
        elements.pressure.textContent = `${data.main.pressure} hPa`;
        elements.clouds.textContent = `${data.clouds.all}%`;
        elements.time.textContent = timeStr;
        elements.icon.textContent = icon;

        elements.card.classList.remove("hidden");
      } catch (err) {
        showError(err.message);
      } finally {
        elements.btn.disabled = false;
        elements.btn.textContent = "Sprawd≈∫";
      }
    }

    // Start
    elements.btn.addEventListener("click", fetchWeather);
    elements.input.addEventListener("keypress", (e) => {
      if (e.key === "Enter") fetchWeather();
    });

    // ≈Åaduj domy≈õlne miasto
    window.addEventListener("load", () => {
      elements.input.value = DEFAULT_CITY;
      fetchWeather();
    });
  </script>
</body>
</html>